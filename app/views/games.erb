    <% @gamecategories.each{ |k1|  %>
      <div class="selection" id="<%= k1[:shortname] %>range" style="display:none">
        <% k1[:ranges].each { |k2| %>
            <div class = "btn btn-lg selection-button range" id="<%= k1[:shortname] + k2[:name] %>"></div>
        <% } %>
      </div>
    <% }%>


  <!-- Auswahl Spiel -->


    <% @gamecategories.each{ |k1|  %>
        <% k1[:ranges].each { |k2| %>
          <div class="selection" id="<%= k1[:shortname] + k2[:name] %>games" style="display:none">
