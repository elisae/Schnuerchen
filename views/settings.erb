<link href="/stylesheets/profil.css" rel="stylesheet">
<link href="/stylesheets/settings.css" rel="stylesheet">

<section class="container">
  <!-- Trophähen -->


    <div id="myProfil" user="<%= @user[:id] %>">

    <h1 id="page-info">Hallo <span id="userName"><%= @user[:firstname] %></span></h1>
    
    <div class="row" id="usernameRow">
      <div class="col-lg-offset-3 col-lg-2">
        <h3>Username</h3>
      </div>
      <div class="col-lg-offset-2 col-lg-2">
        <h3><%= @user[:username] %></h3>
      </div>
      <hr>
    </div>

     <div class="clearfix"></div>

    <div class="row" id="firstnameRow">
      <div class="col-lg-offset-2 col-lg-2">
        <h3>Name</h3>
      </div>
      <div class="col-lg-offset-1 col-lg-2" id="firstnameCol">
        <h3><%= @user[:firstname] %></h3>
      </div>
      <div class="col-lg-offset-1 col-lg-2">
        <input id="firstnameBtn" class="btn btn-lg btn-outline btn-xl" type="button" onclick="changeField('firstname');" value="Ändern">
      </div>
      <hr>
    </div>

    <div class="clearfix"></div>

      <div class="row" id="emailRow">
      <div class="col-lg-offset-2 col-lg-2">
        <h3>Email</h3>
      </div>
      <div class="col-lg-offset-1 col-lg-2" id="emailCol">
        <h3><%= @user[:email] %></h3>
      </div>
      <div class="col-lg-offset-1 col-lg-2">
        <input id="emailBtn" class="btn btn-outline btn-xl btn-lg" type="button" onclick="changeField('email');" value="Ändern"/>
      </div>
      <hr>
    </div>

      <div class="clearfix"></div>

      <div class="row" id="passwordRow">

      <div class="col-lg-offset-2 col-lg-2">
        <h3>Passwort</h3>
      </div>
        <div class="col-lg-offset-1 col-lg-2">
          <input type="password" placeholder="Altes Passwort" name="oldpassword" class="input-lg" id="oldpwInput"/>
        </div>
      <div class="col-lg-offset-1 col-lg-2">
        <input id="passwordBtn" class="btn btn-outline btn-lg btn-xl" type="button" onclick="changeField('password');" value="Ändern">
      </div>
        <div id="passwordCol" class="col-lg-offset-1 col-lg-2"></div>
      </div>
      <hr>

    <div class="row">
      <div class="clearfix"></div>
      <div class="col-md-4 col-md-offset-8"><input class="btn btn-outline btn-xl btn-lg" type="button" onclick="deleteUser(<%= @user[:id] %>);" value="Profil Löschen"></div>
    </div>


    </div>
</section>
<script src="/javascripts/settings.js"></script>
